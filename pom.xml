        <module>org.scalamacros.quasiquotes</module>
        <module>org.scalamacros.quasiquotes.source</module>
        <module>org.typelevel.discipline</module>
        <module>org.typelevel.discipline.source</module>
        <module>com.typesafe.scalalogging</module>

        <module>org.jsoup.source</module>
        <module>joda-time.source</module>
        <module>org.joda.convert.source</module>
        <module>org.typelevel.scodec.bits.source</module>
	</modules>

  <build>
    <plugins>
      <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.7</version>
          <configuration>
              <altDeploymentRepository>dropbox.repo::default::file://${env.DROPBOX_PATH}/maven2</altDeploymentRepository>
          </configuration>
      </plugin>   
    </plugins>   
  </build>	

</project>